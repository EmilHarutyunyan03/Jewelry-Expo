{{ 'section-main-page.css' | asset_url | stylesheet_tag }}

{%- style -%}
  #page-banner-{{ section.id }} {
    padding-top: {{ section.settings.padding_top}}px;
    padding-bottom: {{ section.settings.padding_bottom}}px;
  }
  @media only screen and (max-width: 768px) {
    #page-banner-{{ section.id }}{
      padding-top:  {{section.settings.padding_top_mob}}px;
      padding-bottom: {{section.settings.padding_bottom_mob}}px;
    }
  }
{%- endstyle -%}

<div id="page-banner-{{section.id}}" class="page-width section-{{ section.id }}-padding">
  <h1 class="main-page-title page-title h0{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--fade-in{% endif %} font-['Museo_Sans_Cyrl']  text-center  text-[32px] not-italic font-[250] leading-[48px] uppercase !m-[0] text-[#1E54A5]">
    {% if section.settings.title != blank %}
      {{ section.settings.title }}
    {%  else %}
      {{ page.title | escape }}

    {% endif %}
  </h1>
  <div class="rte{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}  !mx-[auto] !my-[0] !text-[#4F4F4F] text-center !text-[14px] not-italic font-light leading-[180%]">
    {% if section.settings.desc != blank %}
      {{ section.settings.desc }}
    {%  else %}
    {{ page.content }}
    {% endif %}
  </div>
</div>

{% schema %}
{
  "name": "Page Banner",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "desc",
      "label": "Description"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    },
    {
        "type": "range",
        "id": "padding_top_mob",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Mobile Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom_mob",
        "min": 0,
        "max": 100,
        "step": 1,
        "unit": "px",
        "label": "Mobile Padding Bottom",
        "default": 40
      }
  ],
  "presets": [
    {
      "name": "Page Banner",
      "category": "custom"
    }
  ]
}
{% endschema %}
