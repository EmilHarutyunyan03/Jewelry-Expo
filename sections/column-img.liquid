{% style %}
  #column-img-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
{% endstyle %}
<div id="column-img-{{section.id}}" class="page-width w-full flex gap-[100px] justify-between items-center  max-md:flex-wrap max-md:justify-center max-sm:flex-col max-sm:gap-[40px]">
  {% for block in section.blocks %}
    <div class="flex items-center">
      {{
        block.settings.image
        | image_url: width: 254
        | image_tag:
          class: 'h-auto max-w-[254px] object-cover w-full'
      }}
    </div>
  {% endfor %}
</div>
{% schema %}
{
  "name": "Column Img",
  "tag": "section",
  "class": "column-img-wrap",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "name": "Img item",
      "type": "img",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Column Img",
      "settings": {}
    }
  ]
}
{% endschema %}
