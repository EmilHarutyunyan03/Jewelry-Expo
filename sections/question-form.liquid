{% style %}
  #contact-select-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
{% endstyle %}

<div id="contact-select-{{ section.id }}" class="color-{{ section.settings.color_scheme }} page-width flex items-center  justify-center max-lg:flex-wrap max-lg:!px-[0px]">
  <div
    style="background-image: url({{ section.settings.background | img_url: 'master' }});"
    class="flex w-full min-h-[800px] max-w-[700px] relative [background-size:cover] pt-[50px] pb-[50px] bg-[center_center] bg-no-repeat max-lg:max-w-[100%]"
  >
    <div class="flex flex-col mt-[auto] p-[40px] max-xl:max-w-[510px] max-sm:p-[20px]">
      <p class="text-[48px] mb-[18px] font-[250] leading-[48px] text-white">{{ section.settings.title }}</p>
      <p class="text-[16px] w-full max-w-[500px] font-normal leading-[24px] text-white mb-[48px]">
        {{ section.settings.desc }}
      </p>
      <div>
        {% render 'button-arrow',
          text: section.settings.button_title,
          url: section.settings.button_link,
          class: 'text-[14px] w-[fit-content]  font-normal  border-[1px] border-[solid] border-[white]
          flex justify-center items-center gap-[10px] px-[38px] py-[18px] bg-[transparent] text-white group '
        %}
      </div>
    </div>
  </div>

  <div class="w-full max-w-[700px] p-[60px] bg-[#FBFBFB] ml-[-4vw] z-10 max-lg:ml-[0]  max-lg:max-w-[100%] max-sm:p-[20px]">
    {% form 'contact', class: 'contact-form' %}
      {%- if form.posted_successfully? -%}
        <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
          {% render 'icon-success' %}
          {{ 'templates.contact.form.post_success' | t }}
        </h2>
      {%- elsif form.errors -%}
        <div class="form__message">
          <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
            {% render 'icon-error' %}
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
        </div>
        <ul class="form-status-list caption-large" role="list">
          <li>
            <a href="#ContactForm-email" class="link">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
            </a>
          </li>
        </ul>
      {%- endif -%}
      <div class="flex flex-col gap-[18px] w-full max-w-[420px] items-center text-center pb-[60px] m-auto max-sm:gap-[12px] max-sm:mt-[40px]">
        <h2 class="text-[36px] font-light uppercase max-sm:text-[24px] max-sm:mb-[0px] ">
          {{ section.settings.title_contact }}
        </h2>
        <p class="text-[16px] font-normal leading-[24px] text-[#5B5B5B] max-sm:text-[14px] [&>a]:text-[#1D54A6] [&>a]:underline ">
          {{ section.settings.desc_contact }}
        </p>
        <p class="text-[16px] font-normal leading-[24px] ">{{ section.settings.title_form }}</p>
      </div>

      <div class="flex justify-between gap-[10px] max-sm:flex-wrap max-sm:gap-[24px]">
        <!-- <label for="ContactFormFirstName">First Name</label> -->
        <input
          class="max-w-[270px] w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]"
          type="text"
          id="ContactFormFirstName"
          name="contact[first_name]"
          placeholder="First Name"
          required
        >

        <!-- <label for="ContactFormLastName">Last Name</label> -->
        <input
          class="max-w-[270px] w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]"
          type="text"
          id="ContactFormLastName"
          name="contact[last_name]"
          placeholder="Last Name"
          required
        >
      </div>

      <div class="input-fields gap-[10px] flex justify-between max-sm:flex-wrap max-sm:gap-[24px] max-sm:mt-[24px]">
        <!-- <label for="ContactFormEmail">Email Address</label> -->
        <input
          class=" max-w-[270px] w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]"
          type="email"
          id="ContactFormEmail"
          name="contact[email]"
          placeholder="Email Address"
          required
        >

        <!-- <label for="ContactFormEmail">Email Address</label> -->
        <input
          class="max-w-[270px] w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]"
          type="tel"
          id="ContactFormTel"
          name="contact[tel]"
          placeholder="Phone Number"
          required
        >
      </div>

      <div class="input-fields flex justify-between max-sm:flex-wrap max-sm:gap-[24px] max-sm:mt-[24px]">
        <!-- <label for="ContactFormEmail">Attach File</label> -->
        <label for="ContactFormFile" class="flex gap-[8px] items-center w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]">
          <span class="icon ">
            <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none">
              <path d="M21 10.9696L12.9628 18.5497C11.9782 19.4783 10.6427 20 9.25028 20C7.85782 20 6.52239 19.4783 5.53777 18.5497C4.55315 17.6211 4 16.3616 4 15.0483C4 13.7351 4.55315 12.4756 5.53777 11.547L13.575 3.96687C14.2314 3.34779 15.1217 3 16.05 3C16.9783 3 17.8686 3.34779 18.525 3.96687C19.1814 4.58595 19.5502 5.4256 19.5502 6.30111C19.5502 7.17662 19.1814 8.01628 18.525 8.63535L10.479 16.2154C10.1508 16.525 9.70569 16.6989 9.24154 16.6989C8.77738 16.6989 8.33224 16.525 8.00403 16.2154C7.67583 15.9059 7.49144 15.4861 7.49144 15.0483C7.49144 14.6106 7.67583 14.1907 8.00403 13.8812L15.429 6.88674" stroke="#5B5B5B" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round"/>
            </svg>
          </span>
          <!-- You can change this to an icon of your choice -->
          <span id="file-upload-text" class="text-[#5B5B5B] opacity-70 font-normal leading-[24px]">Attach File</span>
          <input
            class="!hidden"
            type="file"
            id="ContactFormFile"
            accept="image/*, .pdf"
            name="contact[file]"
            placeholder="Attach File"
            required
          >
        </label>
      </div>
      <!-- <label for="ContactFormMessage">Anything Else We Should Know...</label> -->
      <textarea
        id="ContactFormMessage"
        name="contact[body]"
        rows="3"
        placeholder="Anything Else We Should Know..."
        required
        class="resize-none	 w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:mt-[24px]"
      ></textarea>

      {%- if form.errors contains 'email' -%}
        <small class="contact__field-error" id="ContactForm-email-error">
          <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
          <span class="form__message">
            {%- render 'icon-error' -%}
            {{- form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email -}}
          </span>
        </small>
      {%- endif -%}
      <button
        type="submit"
        class="bg-[rgb(var(--color-button))] text-[rgb(var(--color-button-text))] mx-auto mt-[66px] text-[14px] w-[fit-content]  font-normal  flex justify-center items-center gap-[10px] px-[38px] py-[18px] bg-[rgba(var(--color-button))] text-[rgba(var(--color-button-text))] group"
      >
      SEND MESSAGE
        
      </button>
    {% endform %}
  </div>
</div>
<script>
  document.getElementById('ContactFormFile').addEventListener('change', function() {
    const file = this.files[0];
    if (file) {
        document.getElementById('file-upload-text').textContent = file.name;
    } else {
        document.getElementById('file-upload-text').textContent = 'Attach file';
    }
});
</script>
{% schema %}
