    },
    {
      "type": "text",
      "id": "title_form",
      "label": "Form Title",
      "default": "Schedule An Appointment"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "text",
      "id": "button_title",
      "label": "Button Title",
      "default": "MORE ABOUT US"
    },
    {
      "type": "range",
