      {% comment %} <img src="{{  block.settings.logo | img_url: 'master' }}" loading="lazy" class="block"> {% endcomment %}
    {% endfor %}
  </div>
</div>


{% schema %}
{
  "name": "Infinity Scroll",
  "class": "infiny-scroll",
  "tag": "section",
  "settings": [
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 2,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "name": "Logo",
      "type": "logo",
      "settings": [
        {
          "type": "html",
          "id": "logo",
          "label": "Svg Logo"
        }
       
      ]
    }
  ],
  "presets": [
    {
      "name": "Infinity Scroll",
      "category": "Custom"
    }
  ]
}
{% endschema %}
