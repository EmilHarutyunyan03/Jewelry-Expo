<div id="infinity-{{section.id}}" class="page-width overflow-hidden [mask-image:_linear-gradient(to_right,transparent_0,_black_128px,_black_calc(100%-128px),transparent_100%)]">
  <div class="flex animate-scroll gap-[100px] items-center  max-sm:gap-[32px]">
    {% for block in section.blocks %}
      <div  class="inf-svg">
        {{  block.settings.logo}}

      </div>
      {% comment %} <img src="{{  block.settings.logo | img_url: 'master' }}" loading="lazy" class="block"> {% endcomment %}
    {% endfor %}
