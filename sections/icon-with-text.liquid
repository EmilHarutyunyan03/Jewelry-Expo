{% style %}
  #icon-with-text-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media only screen and (max-width: 768px) {
    #icon-with-text-{{ section.id }} {
      padding-top:  {{section.settings.padding_top_mob}}px;
      padding-bottom: {{section.settings.padding_bottom_mob}}px;
    }
  }
{% endstyle %}
<div id="icon-with-text-{{section.id}}" class="page-width">
  <div class="px-5 mt-16 w-full max-md:mt-10 max-md:max-w-full max-md:mt-0">
    <div class="flex gap-[40px] justify-center max-md:flex-col max-md:gap-0  max-md:items-center">
      {% for block in section.blocks %}
        <div class="flex flex-col max-w-[300px] w-full  max-md:ml-0 max-md:w-full">
          <div
            class="flex flex-col grow justify-between items-center text-center text-blue-800 max-md:mt-10"
          >
            {{
              block.settings.icon
              | image_url: width: 50
              | image_tag: loading: 'lazy', class: 'w-full max-w-[50px] block object-cover'
            }}
            <div class="text-[24px] font-light leading-[normal] mt-[18px] ">{{ block.settings.title }}</div>
            <div class="text-[14px] font-normal leading-[24px] mt-[12px] mb-[18px] text-[#5B5B5B]  max-w[300px] w-full">
              {{ block.settings.desc }}
            </div>
            <a href="{{ block.settings.button_link }}" class="text-[16px] not-italic leading-[normal] underline">{{ block.settings.button_title }}</a>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{% schema %}
{
  "name": "Icon With Text",
  "tag": "section",
  "class": "icon-with-text",
  "settings": [
  
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 10,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 70
    },
    {
        "type": "range",
        "id": "padding_top_mob",
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "px",
        "label": "Mobile Padding Top",
        "default": 0
      },
      {
        "type": "range",
        "id": "padding_bottom_mob",
        "min": 0,
        "max": 100,
        "step": 10,
        "unit": "px",
        "label": "Mobile Padding Bottom",
        "default": 0
      }
  ],
  "blocks": [
    {
      "name": "icon-text",
      "type": "logo",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "text",
          "id": "desc",
          "label": "Desc"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        },
        {
          "type": "text",
          "id": "button_title",
          "label": "Button Title",
          "default": "Learn more."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Icon With Text",
      "settings": {}
    }
  ]
}
{% endschema %}
