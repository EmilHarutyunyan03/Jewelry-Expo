{% style %}
  #contact-select-{{ section.id }} {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  #ContactFormDateTime::-webkit-calendar-picker-indicator {
    color: #66A7DE;
  }

  #ContactFormDateTime {
    position: relative;
    padding: 10px;
  }

  #ContactFormDateTime::-webkit-calendar-picker-indicator {
    color: transparent;
    background: none;
    z-index: 1;
  }

  #ContactFormDateTime:before {
    color: transparent;
    background: none;
    display: block;
    content: url("data:image/svg+xml;base64,");
    width: 15px;
    height: 20px;
    position: absolute;
    top: 12px;
    right: 6px;
    color: #999;
  }
{% endstyle %}

<div
  id="contact-select-{{ section.id }}"
  class="color-{{ section.settings.color_scheme }} page-width flex items-center  justify-center max-lg:flex-wrap max-lg:!px-[0px]"
>
  <div
    style="background-image: url({{ section.settings.background | img_url: 'master' }});"
    class="flex w-full min-h-[800px] max-w-[700px] relative [background-size:cover] pt-[50px] pb-[50px] bg-[center_center] bg-no-repeat max-lg:max-w-[100%]"
  >
    <div class="flex flex-col mt-[auto] p-[40px] max-xl:max-w-[510px] max-sm:p-[20px]">
      <p class="text-[48px] mb-[18px] font-[250] leading-[48px] text-white">{{ section.settings.title }}</p>
      <p class="text-[16px] w-full max-w-[500px] font-normal leading-[24px] text-white mb-[48px]">
        {{ section.settings.desc }}
      </p>
      <div>
        {% render 'button-arrow',
          text: section.settings.button_title,
          url: section.settings.button_link,
          class: 'text-[14px] w-[fit-content]  font-normal  border-[1px] border-[solid] border-[white]
                                        flex justify-center items-center gap-[10px] px-[38px] py-[18px] bg-[transparent] text-white group '
        %}
      </div>
    </div>
  </div>

  <div class="w-full max-w-[700px] p-[60px] bg-[#FBFBFB] ml-[-4vw] z-10 max-lg:ml-[0]  max-lg:max-w-[100%] max-sm:p-[20px]">
    {% form 'contact', class: 'contact-form' %}
      {%- if form.posted_successfully? -%}
        <h2
          class="form-status form-status-list form__message"
          tabindex="-1"
          autofocus
        >
          {% render 'icon-success' %}
          {{ 'templates.contact.form.post_success' | t }}
        </h2>
      {%- elsif form.errors -%}
        <div class="form__message">
          <h2
            class="form-status caption-large text-body"
            role="alert"
            tabindex="-1"
            autofocus
          >
            {% render 'icon-error' %}
            {{ 'templates.contact.form.error_heading' | t }}
          </h2>
        </div>
        <ul class="form-status-list caption-large" role="list">
          <li>
            <a href="#ContactForm-email" class="link">
              {{ form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email }}
            </a>
          </li>
        </ul>
      {%- endif -%}
      <div class="flex flex-col gap-[18px] w-full max-w-[420px] items-center text-center pb-[60px] m-auto max-sm:gap-[12px] max-sm:mt-[40px]">
        <h2 class="text-[36px] font-light uppercase max-sm:text-[24px] max-sm:mb-[0px] ">
          {{ section.settings.title_contact }}
        </h2>
        <p class="text-[16px] font-normal leading-[24px] text-[#5B5B5B] max-sm:text-[14px]">
          {{ section.settings.desc_contact }}
        </p>
        <p class="text-[16px] font-normal leading-[24px] ">{{ section.settings.title_form }}</p>
      </div>

      <div class="flex justify-between max-sm:flex-wrap max-sm:gap-[24px]">
        <!-- <label for="ContactFormFirstName">First Name</label> -->
        <input
          class="max-w-[270px] w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]"
          type="text"
          id="ContactFormFirstName"
          name="contact[first_name]"
          placeholder="First Name"
          required
        >

        <!-- <label for="ContactFormLastName">Last Name</label> -->
        <input
          class="max-w-[270px] w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]"
          type="text"
          id="ContactFormLastName"
          name="contact[last_name]"
          placeholder="Last Name"
          required
        >
      </div>

      <div class="input-fields flex justify-between max-sm:flex-wrap max-sm:gap-[24px] max-sm:mt-[24px]">
        <!-- <label for="ContactFormEmail">Email Address</label> -->
        <input
          class=" max-w-[270px] w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]"
          type="email"
          id="ContactFormEmail"
          name="contact[email]"
          placeholder="Email Address"
          required
        >

        <!-- <label for="ContactFormEmail">Email Address</label> -->
        <input
          class="max-w-[270px] w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]"
          type="tel"
          id="ContactFormTel"
          name="contact[tel]"
          placeholder="Phone Number"
          required
        >
      </div>
      <div class="flex justify-between m-t-[30px] max-sm:flex-wrap max-sm:gap-[24px] max-sm:mt-[24px]">
        <!-- <label for="ContactFormInterest">Iâ€™m Interested In...</label> -->
        <select
          defaultV
          id="ContactFormInterest"
          name="contact[interest]"
          class="max-w-[270px] w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]"
        >
          <option
            value=""
            selected
            disabled
            hidden
          >
            I'm Interested In...
          </option>
          <option value="Engagement Rings">Engagement Rings</option>
          <option value="Wedding Bands">Wedding Bands</option>
          <option value="Diamonds">Diamonds</option>
          <option value="Custom Design">Custom Design</option>
          <option value="Other">Other</option>
          <!-- Add more options as needed -->
        </select>

        <!-- <label for="ContactFormDateTime">Preferred Date/Time</label> -->
        <input
          type="text"
          id="ContactFormDateTime"
          value="Date/time"
          name="contact[date_time]"
          required
          class="[::-webkit-calendar-picker-indicator:red] max-w-[270px] w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:max-w-[100%]"
        >
      </div>

      <!-- <label for="ContactFormMessage">Anything Else We Should Know...</label> -->
      <textarea
        id="ContactFormMessage"
        name="contact[body]"
        rows="1"
        placeholder="Anything Else We Should Know..."
        required
        class="resize-none	 w-full border-b [border-bottom-style:solid] [border-bottom-color:rgb(211,_211,_211)] px-[6px] py-[12px] bg-transparent focus-visible:shadow-none outline-none max-sm:mt-[24px]"
      ></textarea>

      {%- if form.errors contains 'email' -%}
        <small class="contact__field-error" id="ContactForm-email-error">
          <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
          <span class="form__message">
            {%- render 'icon-error' -%}
            {{- form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email -}}
          </span>
        </small>
      {%- endif -%}
      <button
        type="submit"
        class="bg-[rgb(var(--color-button))] text-[rgb(var(--color-button-text))] mx-auto mt-[66px] text-[14px] w-[fit-content]  font-normal  flex justify-center items-center gap-[10px] px-[38px] py-[18px] bg-[rgba(var(--color-button))] text-[rgba(var(--color-button-text))] group"
      >
        SCHEDULE APPOINTMENT
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="29"
          height="9"
          viewBox="0 0 29 9"
          fill="none"
          class="group-hover"
        >
          <path
            id="Arrow 1"
            d="M28.3536 4.85355C28.5488 4.65829 28.5488 4.34171 28.3536 4.14645L25.1716 0.964466C24.9763 0.769204 24.6597 0.769204 24.4645 0.964466C24.2692 1.15973 24.2692 1.47631 24.4645 1.67157L27.2929 4.5L24.4645 7.32843C24.2692 7.52369 24.2692 7.84027 24.4645 8.03553C24.6597 8.2308 24.9763 8.2308 25.1716 8.03553L28.3536 4.85355ZM0 5H28V4H0L0 5Z"
            fill="white" />
        </svg>
      </button>
    {% endform %}
  </div>
</div>
<script>
  document.getElementById("ContactFormDateTime").addEventListener("focus",(event) => {
    console.log(event)
    event.target.type="datetime-local"
  })
  // document.getElementById("ContactFormDateTime").addEventListener("onfocus",(event) => {
  //   console.log("onfucs",event)
  // })
</script>
